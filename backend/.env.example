# Variables de entorno para producción en Render
# Copia estas variables a Render Dashboard

# MongoDB Atlas - REEMPLAZAR con tu connection string
MONGODB_URI=mongodb+srv://usuario:password@cluster.mongodb.net/database_name

# JWT Secret - GENERAR uno nuevo y seguro
JWT_SECRET=tu_jwt_secret_super_largo_y_seguro_aqui

# Puerto (Render lo asigna automáticamente)
PORT=5000

# Entorno
NODE_ENV=production

# CORS Origins - REEMPLAZAR con tu dominio de Vercel
CORS_ORIGIN=https://tu-app.vercel.app